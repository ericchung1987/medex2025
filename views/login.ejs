<div class="container mt-5">
  

  <div class="row">
    <div class="col-sm-12" style="padding: 0% 20%">
      <h1>Login</h1>
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="username">Registered Email</label>
              <input type="email" class="form-control" name="username" placeholder="eg: email@gmail.com">
            </div>
            <div class="form-group">
              <label for="password">Registered IC</label>
              <input type="password" class="form-control" name="password" placeholder="eg: 870504495211">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>
          <% if (locals.messagelogin) { %>
          <p><%= locals.messagelogin %></p>
          <% } %>
        </div>
      </div>
    </div>

